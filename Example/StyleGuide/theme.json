{
    "colors": {
        "accent": "#d152ed",
        "primary": "#12B7E0",
        "primaryBorder": "#1290c0",
        "captionColor": "#525252"
    },

    "fonts": {
        "caption": "size:13"
    },

    "view": {
        "roundBlue": {
            "backgroundColor": "@primary",
            "cornerRadius": 5,
            "borderWidth": 2,
            "borderColor": "@primaryBorder"
        }
    },

    "text": {
        "caption": {
            "textColor": "@captionColor",
            "font": "@caption"
        }
    },

    "button": {
        "solidBlue": {
            "textColor": "#ffffff",
            "backgroundColor": "@primary",
            "borderColor": "@primaryBorder",
            "cornerRadius": 10,
            "borderWidth": 4,
            "backgroundColorPressed": "#8052B7E0"
        }
    }
}
